@model pgisaraibookingWebAPI.Models.RegisterModel
<div class="jumbotron">
    <h3>ASP.NET</h3>

    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {<div class="row">
            <div class="col-md-12">
                @{
                    if (Model.Image3 != null)
                    {
                        var imageBase64 = Convert.ToBase64String(Model.Image3);
                        var imageSrc1 = string.Format("data:image/jpg;base64,{0}", imageBase64);
                        <img src="@imageSrc1" alt="" width="400" height="400" />
                    }
                }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>User Name</label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Password</label>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mobile Number</label>
                        @Html.TextBoxFor(m => m.Mobile_Number, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Gender</label>
                        @Html.RadioButtonFor(m => m.Gender, "Male", new { }) Male
                        @Html.RadioButtonFor(m => m.Gender, "Female", new { }) Female
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Department</label>
                        @Html.DropDownListFor(m => m.DeptID, new List<SelectListItem>
                     {
                     new SelectListItem { Text = "HTC DESIRE", Value = "1"},
                     new SelectListItem { Text = "Moto G", Value = "2"},
                     new SelectListItem { Text = "GO mobiles", Value = "3"}
                     }, "--Select Department--")
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Upload Profile Image</label>
                        @Html.TextBoxFor(m => m.ProfileImage, new { type = "file", @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>IsActive</label>
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-6">
                    <input type="submit" name="Submit" />
                </div>
            </div>
        </div>
    }
</div>
